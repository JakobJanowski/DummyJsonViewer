@model Products
@{
	ViewData["Title"] = "Products";
}

<table class="table table-striped table-bordered">
    <tr>
        <th>Thumbnail</th>
        <th>Title</th>
        <th>Price</th>
        <th>Tags</th>
        <th>Detail</th>
       
    </tr>
    @foreach (var item in Model.products)
    {
        <tr>
            <td> <img src=@item.thumbnail /> </td>
            <td>@item.title</td>
            <td>@item.price</td>
            <td>
                @foreach(var tag in @item.tags)
                {
                    <p>@tag</p>
                }
            </td>
            <td><button><a asp-action="Detail" asp-route-id="@item.id" asp-route-skip="@Model.skipped" class="btn-black">Detail</a></button></td>
            
        </tr>
    }
</table>

<a asp-controller="Products"  asp-route-skip="@(Model.skipped - 30)" class="btn-black">Previous</a>
<a asp-controller="Products" asp-route-skip="@(Model.skipped + 30)" class="btn-black">Next</a>

